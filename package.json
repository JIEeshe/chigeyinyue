{
  "name": "website-embed-app",
  "version": "1.0.0",
  "description": "内嵌网站的Electron应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "keywords": ["electron", "webview"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.chige.musicdownloader",
    "productName": "驰哥音乐下载器",
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "${productName}"
    }
  }
}